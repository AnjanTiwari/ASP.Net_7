@model IEnumerable<People>

@{
    ViewBag.Title = "GetPeople";
}   

<h2>List of People</h2>

</br>
</br>

<div style="text-align: right; margin-top: 20px; margin-bottom: 20px;">
    <a asp-action="CreatePeople" class="btn btn-info">Create New</a>
</div>

<table class="table table-striped table-bordered table-hover">
    <tr align="center">
        <th>ID</th>
        <th>Name</th>
        <th>City</th>
        <th>Actions</th>
    </tr>
    @foreach (var person in Model)
    {
        <tr align="center">
            <td>@person.ID</td>
            <td>@person.Name</td>
            <td>@person.City</td>
            <td>
                <a class="btn btn-primary" asp-asp-controller="People" asp-action="EditPeople" asp-route-id="@person.ID">Edit</a>
            </td>
        </tr>
    }