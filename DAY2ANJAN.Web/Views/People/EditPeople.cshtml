@model People
<h2>Edit People</h2>

<form method="post">
    <div class="mt-3">
        <lable class="form-lable">ID</label> 
        <input type="text" class="form-control" asp-for="ID" readonly />
    </div>

    <div class="mt-3">
        <lable class="form-lable">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <lable class="form-lable">City</label>
        <input type="text" class="form-control" asp-for="City" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Update</button>
        &nbsp;&nbsp;
        <button type="submit" class="btn btn-danger"
        asp-action="DeletePeople" asp-route-id="@Model.ID"
        asp-controller="People" onclick="return confirm('Are you sure you want to delete this record?');"
        >Delete</button>
    </div>
</form>

